@model Application.ViewModels.vmLoginUser

@{
    Layout = null;
}

<style>
    html,
    body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    @@media (max-width: 450px) {
        .h-custom {
            height: 100%;
        }
    }

    .footer {
        background-color: rgba(0, 0, 0, 0.98) !important;
        font-family: "Montserrat", sans-serif;
        font-size: 0.6875rem;
        font-weight: 600;
        letter-spacing: 0.09375rem;
        position: relative;
        text-transform: uppercase;
    }

        .footer a {
            color: rgba(255, 255, 255, 0.9) !important;
        }

        .footer b {
            color: rgba(255, 255, 255, 0.9) !important;
        }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Janus Automation</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <h3 class="navbar-brand text-white"><b>ANTI-SWAY</b></h3>
            </div>
        </nav>
    </header>

    <main class="pb-3">
        <div class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="~/imgs/janus-automation-psd.png" class="img-fluid" alt="Sample image" />
                    </div>

                    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="d-flex justify-content-center">
                                <div class="alert alert-danger text-center" role="alert">
                                    @TempData["ErrorMessage"]
                                </div>
                            </div>
                            <script>
                                setTimeout(function () {
                                    document.querySelectorAll('.alert').forEach(alert => alert.remove());
                                }, 4000);
                            </script>
                            TempData["ErrorMessage"] = null;
                        }
                        <form method="post">
                            <div data-mdb-input-init class="form-group form-outline mb-4">
                                <label class="form-label" asp-for="UserName">Username or email</label>
                                <input class="form-control form-control-lg" asp-for="UserName" type="text"
                                       placeholder="Enter a email or username address" required />
                            </div>
                            <div data-mdb-input-init class="form-group form-outline mb-3">
                                <label class="form-label" asp-for="Password">Password</label>
                                <input class="form-control form-control-lg" asp-for="Password" type="password"
                                       placeholder="Enter password" required />
                            </div>
                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="border-top footer text-muted  text-center">
        <div class="container p-4">
            <b>&copy; @DateTime.Now.Year - JANUS AUTOMATION. ALL RIGHTS RESERVED.</b>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>